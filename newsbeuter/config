# vim like navigation
bind-key j down
bind-key k up
bind-key h left
bind-key l right
download-retries 5
download-full-page yes
browser "w3m %u"

# with the "," key and "y" the link opens the default browser vs w3m 
macro y set browser "open %u" ; open-in-browser ; set browser "w3m %u"
auto-reload yes
reload-time 30
